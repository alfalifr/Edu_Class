<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/iv_indication_top"
        android:layout_marginLeft="12dp"
        android:layout_width="5dp"
        android:layout_height="15dp"
        android:src="@color/colorPrimaryDark"/>

    <LinearLayout
        android:id="@+id/ll_main_container"
        android:layout_below="@id/iv_indication_top"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_indication"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_circle_border"
            android:tint="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/tv"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/template_msg_desc"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_indication_bottom"
        android:layout_below="@id/ll_main_container"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="12dp"
        android:layout_width="5dp"
        android:layout_height="15dp"
        android:src="@color/colorPrimaryDark"/>
</RelativeLayout>